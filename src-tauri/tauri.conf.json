{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "EV Predictor",
  "version": "0.1.0",
  "identifier": "com.youssef.evpredictor",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "vite_react_shadcn_ts",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb"],
    "icon": [
      "icons/icon.png",
      "icons/icon-512.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
